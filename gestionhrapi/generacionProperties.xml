<assembly>
	<id>properties</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/META-INF/spring/</directory>
			<includes>        
				<include>*.properties</include>
			</includes>
			<excludes>        
				<exclude>*modulo.properties</exclude>
				<exclude>*element.properties</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>    
		</fileSet>
		<fileSet>
			<directory>src/main/resources/</directory>
			<includes>        
				<include>*log4j.properties</include>
				<include>*.drl</include>
				<include>*.dsl</include>
				<include>*.xls</include>
			</includes>
			<excludes>     
				<exclude>log4j.properties</exclude> 
			</excludes>
			<outputDirectory>/</outputDirectory>    
		</fileSet>
			<fileSet>
			<directory>src/main/webapp/META-INF/spring/</directory>
			<includes>        
				<include>*_ehcache*.xml</include>
			</includes>
			<excludes>
				<exclude>ehcache*.xml</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>    
		</fileSet>
	</fileSets> 
</assembly>
